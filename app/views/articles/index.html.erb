<div class="row">
<p id="notice"><%= notice %></p>
  <% @articles.each do |article| %>
    <div class="col-4">
      <div class="card text-white bg-dark mb-3" style="max-width: 30rem;">
        <div class="card-body">
          <h5 class="card-title"><%= article.title %></h5>
          <h6 class="card-subtitle mb-4 text-muted"><%= article.created_at.strftime("%B %d %Y, %l:%M%P") %></h6>
          <p class="card-text"><%= article.body.truncate(50) %></p>
          <%= link_to 'Show', article, class:"card-link btn btn-secondary" %>
          <td><%= link_to 'Remove', article, method: :delete, data: { confirm: 'Are you sure?' }, class:"card-link btn btn-danger" %></td>
        </div>
      </div>
    </div>
  <% end %>
</div>
